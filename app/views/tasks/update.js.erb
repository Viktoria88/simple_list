<% if @task.done? %>
  $('#edit_task_<%= @task.id %>').appendTo('#complete');
  $('#update-task').html("<%= escape_javascript(render :partial => @task )%>");
  $('#edit-form').slideUp(350);
<% else %>
  $('#edit_task_<%= @task.id %>').appendTo('#incomplete');
  $('#update-task').html("<%= escape_javascript(render :partial => @task )%>");
  $('#edit-form').slideUp(350);
<% end %>